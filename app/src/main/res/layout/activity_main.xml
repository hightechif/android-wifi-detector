<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scan_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDetectTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detect_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvDetectStatus"
        app:layout_constraintTop_toBottomOf="@id/tvScan" />

    <TextView
        android:id="@+id/tvDetectStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detect_status_negative"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvDetectTitle"
        app:layout_constraintTop_toBottomOf="@id/tvScan" />

</androidx.constraintlayout.widget.ConstraintLayout>